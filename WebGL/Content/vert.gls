#version 300 es

layout (location = 0) in vec3 vPos;
layout (location = 1) in vec3 vNormal;
layout (location = 2) in vec4 col;

uniform mat4 uModel;
uniform mat4 uView;
uniform mat4 uProjection;

out vec4 fCol;
out vec3 fNormal;

void main()
{
    gl_Position = uProjection * uView * uModel * vec4(vPos, 1.0);
    fCol = col;
    fNormal = mat3(uModel) * vNormal;
}